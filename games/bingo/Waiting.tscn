script/source = "extends Node2D

signal Complete();
@onready var progress_bar: ProgressBar = $Control/ProgressBar
@onready var timer: Timer = $Timer;
@onready var container: BoxContainer = $Control/HBoxContainer

var time: float = 0.0;

var players: Dictionary = {};

var player_count: int = 0;
var ready_players: int = 0;

func start(p_time: float):
	self.time = p_time;
	self.timer.start(self.time);
	self.progress_bar.max_value = time;
	self.progress_bar.min_value = 0.0;
	return;

func add_player(player: Player):
	var label = Label.new();
	label.text = player.username;
	self.container.add_child(label);
	self.players[player.username] = label;
	self.player_count += 1;
	return;

func player_ready(player: Player):
	self.players[player.username].set(\"theme_override_colors/font_color\", Color(0, 1, 0, 1));
	self.ready_players += 1;
	
	if self.ready_players >= self.player_count:
		self.Complete.emit();
	return;

func _process(_delta):
	self.progress_bar.value = self.timer.time_left;
	return;

func _on_timer_timeout():
	self.Complete.emit();
	return;
"

